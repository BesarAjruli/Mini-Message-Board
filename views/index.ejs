<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chat</title>
</head>
<body>
    <a href="/new">New Message</a>

    <% messages.forEach(message => {%>
        <div>
            <div>
                <h2 style="line-height: 10px;"><%= message.user %></h2>
            </div>
            <p><%= message.text %></p>
            <span><%= message.added %></span>
        </div>
    <% })  %>  
</body>
</html>